<%- include('../partials/header') %>
<div class="card">
    <div class="card-header">
        <div class="card-title">
            <h3>Əsas məlumatlar</h3>
        </div>
    </div>
    <div class="card-body">
        <div class="row mx-0 mt-3">
            <div class="col-3">
                <label for="ddlYears">Year:</label>
            </div>
            <div class="col-3">
                <select id="ddlYears" class="form-control" name="year">
                    <% years.forEach(x=>{ %>
                        <option value="<%= x.year %>"><%= x.year %></option>
                   <% }) %>
                </select>
            </div>
        </div>
    </div>
</div>
<div class="card mt-3">
    <div class="card-body">
        <div class="row mx-0">
            <div class="col-12">
                <table class="table table-striped table-hover table-bordered">
                    <thead class="table-primary">
                        <th>Country</th>
                        <th>Old Year Edu Count</th>
                        <th>Old Year Mid Count</th>
                        <th>Old Year No Count</th>
                        <th>Current Year Edu Count</th>
                        <th>Current Year Mid Count</th>
                        <th>Current Year No Count</th>
                    </thead>
                    <tbody>
                        <% data.forEach(x=>{ %>
                            <tr>
                                <td>
                                    <span><%= x.countryname %></span>
                                </td>
                                <td>
                                    <input type="text" value="<%= x.old_year_high_edu_count %>" class="form-control">
                                </td>
                                <td>
                                    <input type="text" value="<%= x.old_year_mid_edu_count %>" class="form-control">
                                </td>
                                <td>
                                    <input type="text" value="<%= x.old_year_no_edu_count %>" class="form-control">
                                </td>
                                <td>
                                    <input type="text" value="<%= x.curr_year_high_edu_count %>" class="form-control">
                                </td>
                                <td>
                                    <input type="text" value="<%= x.curr_year_mid_edu_count %>" class="form-control">
                                </td>
                                <td>
                                    <input type="text" value="<%= x.curr_year_no_edu_count %>" class="form-control">
                                </td>
                            </tr>
                       <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<%- include('../partials/footer') %>